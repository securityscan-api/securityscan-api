# SecurityScan API - Production Environment
# Copy this to .env and fill in real values

# REQUIRED - DeepSeek API (main analysis engine)
DEEPSEEK_API_KEY=sk-your-deepseek-key-here

# REQUIRED - Stripe (payments)
STRIPE_SECRET_KEY=sk_live_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Database
DATABASE_URL=sqlite:///./securityscan.db

# API Key prefix
API_KEY_PREFIX=ss_live_

# Domain / Host
API_HOST=apisecurityscan.net

# Environment (set to production to disable /docs)
ENVIRONMENT=production

# REQUIRED - Admin access (generate with: python -c "import secrets; print(secrets.token_hex(32))")
ADMIN_SECRET=CHANGE_THIS_TO_RANDOM_STRING_32_CHARS
ADMIN_EMAIL=your-email@example.com

# SMTP for weekly email digest (optional initially)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Optional - increases API rate limits
NVD_API_KEY=
GITHUB_TOKEN=

# Claude API fallback (when DeepSeek is unavailable)
ANTHROPIC_API_KEY=

# Schedule (UTC)
FEED_SYNC_HOUR=3
DIGEST_DAY=0
DIGEST_HOUR=9
